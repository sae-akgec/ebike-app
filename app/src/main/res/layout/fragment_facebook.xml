<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E0E0E0"
    >

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/fb"
        android:scaleType="fitCenter"
        android:layout_marginTop="60dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/auth_facebook_icon"
        />

    <EditText
        android:id="@+id/auth_facebook_login_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:hint="Facebook id"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/auth_facebook_button_layout"
        />

    <EditText
        android:id="@+id/auth_facebook_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:hint="password"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@+id/auth_facebook_login_id"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="parent" />

    <LinearLayout
        android:id="@+id/auth_facebook_button_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/auth_facebook_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:textColor="@color/colorBlack"
            android:text="BACK"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            />
        <Button
            android:id="@+id/auth_facebook_button"
            android:layout_width="0dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorWhite"
            android:layout_height="match_parent"
            android:text="SIGN IN"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_margin="0dp"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>