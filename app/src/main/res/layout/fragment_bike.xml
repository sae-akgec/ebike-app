<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="5dp"
    tools:context=".fragment.bike.BikeFragment"
    android:background="@color/colorBackground">
    
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorWhite">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/bike_main_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@color/colorPrimaryDark"
            app:civ_border_color="@color/colorBackground"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="15dp" />
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            app:layout_constraintLeft_toRightOf="@+id/bike_main_avatar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="30dp"
            android:text="Custom bike 1"
            android:textStyle="bold" />
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/bike_main_battery"
            android:layout_margin="20dp" />
        <TextView
            android:id="@+id/bike_main_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="68%"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="20dp" />
    
    </android.support.constraint.ConstraintLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:text="ACCESS SHARED WITH"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/bike_share_recyclerView"
        android:background="@color/colorWhite"
        android:layout_marginHorizontal="15dp"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingVertical="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bike_main_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@color/colorPrimaryDark"
            android:text="Delete Bike"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />
        <Button
            android:id="@+id/bike_main_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@color/colorPrimaryDark"
            android:text="Share Access"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />
        <Button
            android:id="@+id/bike_main_fingerprint"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@color/colorPrimaryDark"
            android:text="History"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>