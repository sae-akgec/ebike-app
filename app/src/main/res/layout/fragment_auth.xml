<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E0E0E0"
    tools:context=".fragment.auth.AuthFragment">

    <ImageView
        android:id="@+id/auth_auth_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="80dp"
        android:src="@drawable/icon3"
        />

    <Button
        android:id="@+id/auth_auth_phone"
        android:text="I'll use email or phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:paddingVertical="15dp"
        app:layout_constraintTop_toBottomOf="@+id/auth_auth_logo"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/auth_auth_signin"
        android:text="Already have account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:paddingVertical="15dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/auth_auth_phone" />



</android.support.constraint.ConstraintLayout>