<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="125dp"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="20dp"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/main_bikes_item_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="15dp"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/main_bikes_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            app:layout_constraintLeft_toRightOf="@+id/main_bikes_item_avatar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="30dp"
            android:text="Custom bike 1"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/main_bikes_item_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="25dp"
            android:padding="7dp"
            android:text="Connect"
            android:background="@color/colorPrimaryDark"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/main_bikes_item_adminLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/main_bikes_item_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:layout_marginEnd="2dp"
                android:textColor="@color/colorWhite"
                android:text="Geo Fencing"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/main_bikes_item_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:layout_marginEnd="2dp"
                android:textColor="@color/colorWhite"
                android:text="Share"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/main_bikes_item_fingerprint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorWhite"
                android:text="Settings"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="14sp"
                />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>